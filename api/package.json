{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx watch --include '../shared/**/**' --exclude '../shared/**/node_modules' --clear-screen=false  src/app.ts",
    "build": "pnpm tsc --build",
    "start": "pnpm build && node --env-file=.env ./dist/src/app.js",
    "lint": "eslint --fix .",
    "format": "prettier --write --cache .",
    "lint-format": "pnpm lint && pnpm format",
    "check-types": "pnpm tsc --skipLibCheck --noEmit",
    "generate-prisma": "pnpm prisma generate",
    "db-pull": "pnpm prisma db pull"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.6.1",
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.5.0",
    "@react-email/render": "1.0.5",
    "@shared/email": "workspace:*",
    "@shared/queues": "workspace:*",
    "@shared/schemas": "workspace:*",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "ms": "^2.1.3",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.5.0",
    "rate-limit-redis": "^4.2.0",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@shared/eslint-prettier": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.13.14",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.12",
    "tsx": "^4.19.3"
  }
}
