{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx watch --include '../shared/**/**' --exclude '../shared/**/node_modules' --conditions=development --clear-screen=false  src/app.ts",
    "build": "pnpm tsc --build",
    "start": "pnpm build && node --env-file=.env ./dist/src/app.js",
    "lint": "eslint --fix .",
    "format": "prettier --write --cache .",
    "lint-format": "pnpm lint && pnpm format",
    "check-types": "pnpm tsc --skipLibCheck --noEmit"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.6.1",
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@shared/zod-schemas": "workspace:*",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "http-status": "^2.1.0",
    "ms": "^2.1.3",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@shared/eslint-prettier": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.13.10",
    "tsx": "^4.19.3"
  }
}
