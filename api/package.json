{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx watch --include '../shared/**/**' --exclude '../shared/**/node_modules' --clear-screen=false  src/server.ts",
    "build": "pnpm tsc --build",
    "start": "pnpm build && node --env-file=.env ./dist/src/server.js",
    "lint": "eslint --fix .",
    "format": "prettier --write --cache .",
    "lint-format": "pnpm lint && pnpm format",
    "check-types": "pnpm tsc --skipLibCheck --noEmit",
    "test": "vitest run src/tests/smoke.test.ts && vitest run",
    "test:watch": "vitest run src/tests/smoke.test.ts && vitest watch",
    "test:coverage": "vitest run src/tests/smoke.test.ts && vitest run --coverage",
    "test:watch-coverage": "vitest run src/tests/smoke.test.ts && vitest --watch --coverage"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@node-rs/argon2": "^2.0.2",
    "@react-email/render": "1.0.5",
    "@shared/database": "workspace:*",
    "@shared/email": "workspace:*",
    "@shared/queues": "workspace:*",
    "@shared/schemas": "workspace:*",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "file-type": "^20.5.0",
    "formidable": "^3.5.4",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "mime-types": "^3.0.1",
    "ms": "^2.1.3",
    "nanoid": "^5.1.5",
    "nodemailer": "^6.10.1",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "rate-limit-redis": "^4.2.1",
    "ua-parser-js": "^2.0.4",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@shared/eslint-prettier": "workspace:*",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/formidable": "^3.4.5",
    "@types/mime-types": "^2.1.4",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.16.5",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.12",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
