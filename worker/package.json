{
  "version": "1.0.0",
  "name": "worker",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx watch --clear-screen=false --include '../shared/**/**' --exclude '../shared/**/node_modules' src/app.ts",
    "build": "pnpm tsdown --clean --no-bundle",
    "start": "pnpm build && node --env-file=.env ./dist/app.js",
    "lint": "eslint --fix .",
    "format": "prettier --write --cache .",
    "lint-format": "pnpm lint && pnpm format",
    "check-types": "pnpm tsc --skipLibCheck --noEmit"
  },
  "dependencies": {
    "@react-email/render": "1.0.5",
    "@shared/database": "workspace:*",
    "@shared/email": "workspace:*",
    "@shared/queues": "workspace:*",
    "@shared/schemas": "workspace:*",
    "nodemailer": "^6.10.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@shared/eslint-prettier": "workspace:*",
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
